@model IEnumerable<IMDB.Models.Actor>

@{ ViewBag.Title = "Actors";
                Layout = null; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/Navigation.css" />
    <link rel="stylesheet" href="~/Content/adminIndex.css">

    <title>Document</title>
</head>
<body>

    <header>
        <a href="#" class="logo">

            <i class='bx bxl-imdb'></i> IMDB
        </a>
        <div class="bx bx-menu" id="menu-icon"></div>
        <!--Menu-->
        <ul class="navbar">
            <li>@Html.ActionLink("Search", "search", "Search", new { id = "" }, new { @class = "btn" })</li>
            <li> <a href="#home" class="home-active">Home</a></li>
            <li> <a href="#Movies">Movies</a></li>
            <li> <a href="#Movies">Actors</a></li>
            <li> <a href="#Movies">Directors</a></li>
        </ul>
        <a>@Html.ActionLink("User Name", "SignUp", null, new { @class = "btn" })</a>

    </header>

    <main>
        <h2>Actors</h2>

        <p>
            @Html.ActionLink("Create New Actor", "CreateActor")
        </p>
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImgPath)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Age)
    </td>
    <td>
        <img src="~/Images/@Path.GetFileName(item.ImgPath)" width="50" height="50" />
    </td>
    <td>
        @foreach (var movieActor in item.MovieActors)
        {

@Html.ActionLink(movieActor.Movie.Movie_Name, "MovieDetails", new { id = movieActor.Movie_ID }) <br />                }
    </td>
    <td>
        @Html.ActionLink("Edit", "EditActor", new { id = item.Actor_ID }) |
        @Html.ActionLink("Details", "ActorProfile", new { id = item.Actor_ID }) |
        @Html.ActionLink("Delete", "DeleteActor", new { id = item.Actor_ID })
    </td>
</tr>}

        </table>
        </main>
    </body>
</html>
