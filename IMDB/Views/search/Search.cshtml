@using IMDB.ViewModels
@model SearchViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <!-- Link Swiper's CSS -->
    <link rel="stylesheet"
          href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&family=Ubuntu:wght@300&display=swap" rel="stylesheet">
    <link href="~/styles/search.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="topnav">
        <a class="active" href="@Url.Action("Home","user")">IMDb</a>
        <div class="search-container">
            @using (Html.BeginForm())
            {
                <input class="input" type="text" name="SearchValue" />
                <input type="submit" value="Search" />

            }
        </div>
    </div>

    <table>
        <caption>Actors and Directors</caption>
        <thead>
            <tr>
                <th scope="col">Type</th>
                <th scope="col">name</th>
                <th scope="col">Age</th>
                <th scope="col">Image</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Actors)
            {
                <tr>
                    <td>actor</td>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.Age</td>
                </tr>
            }


            @foreach (var item in Model.Directors)
            {
                <tr>
                    <td>director</td>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.Age</td>
                </tr>
            }

        </tbody>
    </table>
    <table>
        <caption>Movies</caption>
        <thead>
            <tr>
                <th scope="col">Movie name</th>
                <th scope="col">Image</th>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Age</th>
                        </tr>
                    </thead>
                    <tbody id="DataSearching">
                        @foreach (var item in Model.Actors)
                        {
                            <tr>

                                <td>@item.FirstName @item.LastName</td>
                                <td>@item.Age</td>
                            </tr>
                        }

                        @foreach (var item in Model.Directors)
                        {
                            <tr>

                                <td>@item.FirstName @item.LastName</td>
                                <td>@item.Age</td>
                            </tr>
                        }


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr>

                    <td>@item.Movie_Name</td>
                    <td>@item.ImgPath</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
